# 全局优化配置
server_tokens off;  # 隐藏Nginx版本信息
gzip on;            # 启用Gzip压缩
gzip_vary on;
gzip_proxied any;
gzip_comp_level 6;  # 压缩级别(1-9)，6为平衡值
gzip_buffers 16 8k;
gzip_http_version 1.1;
gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript application/vnd.ms-fontobject application/x-font-ttf font/opentype image/svg+xml image/x-icon;

# 公共配置片段 - 减少重复代码
include /etc/nginx/conf.d/common_settings.conf;

# HTTP服务器配置 (81端口)
server {
    listen 81;
    listen [::]:81;
    server_name zyz0922.cn;

    # 引入公共配置
    include /etc/nginx/conf.d/common_locations.conf;

    # 日志配置
    access_log /var/log/nginx/http_access.log;
    error_log /var/log/nginx/http_error.log;
}

# HTTPS服务器配置 (444端口) - 支持HTTP/2
server {
    listen 444 ssl http2;
    listen [::]:444 ssl http2;
    server_name zyz0922.cn;

    # SSL证书配置
    ssl_certificate /ssl/zyz0922.cn.pem;
    ssl_certificate_key /ssl/zyz0922.cn.key;

    # SSL安全强化
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers "ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384";
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;
    ssl_stapling on;                  # 启用OCSP stapling
    ssl_stapling_verify on;
    ssl_trusted_certificate /ssl/zyz0922.cn.pem;  # 信任的证书链

    # 安全响应头
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;  # 防止点击劫持
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;" always;

    # 引入公共配置
    include /etc/nginx/conf.d/common_locations.conf;

    # 错误页面配置
    error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
        internal;
    }

    # 日志配置
    access_log /var/log/nginx/https_access.log;
    error_log /var/log/nginx/https_error.log;
}

# 公共设置文件 (/etc/nginx/conf.d/common_settings.conf)
# 跨域配置
add_header Access-Control-Allow-Origin *;
add_header Access-Control-Allow-Methods 'GET, POST, PUT, DELETE, OPTIONS';
add_header Access-Control-Allow-Headers 'DNT,X-Mx-ReqToken,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Authorization';

# 超时设置
client_body_timeout 10s;
client_header_timeout 10s;
send_timeout 10s;

# 处理OPTIONS请求
if ($request_method = 'OPTIONS') {
    return 204;
}

# 网站根目录与默认首页
root /var/www/html;
index index.html;

# 公共位置配置文件 (/etc/nginx/conf.d/common_locations.conf)
# 静态文件优化
location ~* \.(js|css|png|jpg|jpeg|gif|ico|html|svg|woff|woff2|ttf|eot)$ {
    expires 365d;
    access_log off;
    add_header Cache-Control "public, max-age=31536000, immutable";  # immutable减少304请求
    open_file_cache max=1000 inactive=30s;  # 缓存文件描述符
    open_file_cache_valid 60s;
    open_file_cache_min_uses 2;
    open_file_cache_errors on;
}

# 前端路由支持（单页应用）
location / {
    try_files $uri $uri/ /index.html;
    expires -1;  # 禁用缓存，确保SPA路由正确刷新
    add_header Cache-Control "no-store, no-cache, must-revalidate";
}

# 后端API代理
location /api/ {
    proxy_pass http://localhost:8081;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Port $server_port;
    
    # 超时设置 - 适配API请求
    proxy_connect_timeout 30s;
    proxy_send_timeout 30s;
    proxy_read_timeout 60s;
    
    # 缓冲区优化
    proxy_buffering on;
    proxy_buffer_size 16k;
    proxy_buffers 4 64k;
    proxy_busy_buffers_size 128k;
    proxy_max_temp_file_size 0;  # 禁用临时文件
}

# WebSocket支持 - 保持长连接
location /ws/ {
    proxy_pass http://localhost:8081;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    
    # 禁用缓冲，确保实时性
    proxy_buffering off;
    proxy_cache off;
    
    # 长连接超时设置（7天）- 避免主动断开
    proxy_read_timeout 604800s;
    proxy_send_timeout 604800s;
}

# ISO文件下载优化
location /usb/ {
    autoindex on;
    autoindex_exact_size off;  # 显示人类可读的文件大小
    autoindex_localtime on;    # 显示本地时间
    
    # 下载优化
    proxy_max_temp_file_size 0;
    sendfile on;
    tcp_nopush on;
    aio threads;  # 异步IO支持
}

# 禁止访问隐藏文件（.git, .htaccess等）
location ~ /\. {
    deny all;
    access_log off;
    log_not_found off;
}
